<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="display-4">EAT DA BURGER!</div>
    {{!-- <img src="hamburger-cute.png" alt="hamburger-img"> --}}
  </div>
</div>


<div class="back">

  <div class="container">
    <div class="row align-items-start">
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h2 class="card-title">Burgers that are not devoured!</h2>
            <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              <li>
                {{name}}
                <button class="change-devoured" data-id="{{id}}">
                  EAT
                </button>
              </li>
              {{/unless}}
              {{/each}}
            </ul>
          </div>
          </p>
        </div>
      </div>

      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h2 class="card-title">Burgers that are devoured!</h2>
            <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              <li>
                {{name}}
              </li>
              {{/if}}
              {{/each}}
            </ul>
          </div>
          </p>
        </div>
      </div>

      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h2 class="card-title">Add a Burger!</h2>
            <p class="card-text"></p>
            <form class="create-form">

              <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
              </div>


              <button type="submit">Add Burger!</button>
            </form>
          </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>